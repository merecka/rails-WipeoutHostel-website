<% if @user.uid != nil %>

<h1>Sign Up as a New User</h1>
Name: <%= @user.name.titleize %><br><br>
Email: <%= @user.email %><br><br>
<%= form_for @user do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :email %>
  <%= f.hidden_field :uid %>
  <%= f.hidden_field :image %>
  <%= f.label "telephone", "Telephone (ex: 7132223333)" %><br />
  <%= f.text_field :telephone %><br />
  <%= f.label "Password" %><br />
  <%= f.password_field :password %><br />
  <%= f.label "Password Confirmation" %><br />
  <%= f.password_field :password_confirmation %><br />
  <%= f.label "Admin?" %> <br />
  <%= f.check_box :admin, {}, true, false %><br />
  <br />
  <%= f.submit "Save Changes" %>
  <% end %>

<% else %>

<h1>Edit an Existing User</h1>    
<%= form_for @user do |f| %>
  <%= f.label "Name" %><br />
  <%= f.text_field :name %><br />
  <%= f.label "email", "Email (ex: joe@email.com)" %><br />
  <%= f.text_field :email %><br />
  <%= f.label "telephone", "Telephone (ex: 7132223333)" %><br />
  <%= f.text_field :telephone %><br />
  <%= f.label "Password" %><br />
  <%= f.password_field :password %><br />
  <%= f.label "Password Confirmation" %><br />
  <%= f.password_field :password_confirmation %><br />
  <%= f.label "Admin?" %> <br />
  <%= f.check_box :admin, {}, true, false %><br />
  <br />
  <%= f.submit "Save Changes" %>
  <% end %>

  <br><h4><%= link_to "Back to Your Account", user_path(current_user) %></h4>

<% end %>
