<h1>Sign Up as a New User</h1>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited this User from being saved:
    </h2>
 
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label "Name" %><br />
  <%= f.text_field :name %><br />
  <%= f.label "email", "Email (ex: joe@email.com)" %><br />
  <%= f.text_field :email %><br />
  <%= f.label "telephone", "Telephone (ex: 7132223333)" %><br />
  <%= f.text_field :telephone %><br />
  <%= f.label "Password" %><br />
  <%= f.password_field :password %><br />
  <%= f.label "Password Confirmation" %><br />
  <%= f.password_field :password_confirmation %><br />
  <%= f.label "Admin?" %> <br />
  <%= f.check_box :admin, {}, true, false %><br />
  <br />
  <%= f.submit "Sign Up" %>
<% end %>

<br><br><%= link_to "Sign Up with Facebook", '/auth/facebook' %>

<br><br><%= link_to "Back to Homepage", '/' %>